@model IEnumerable<MyBulkMealsApp.Models.MealPlan>

@{
    ViewData["Title"] = "Meal Plans";
}

<h1>My Meal Plans</h1>
<table class="table-bordered table-striped w-100 font-size--1point5">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PlanName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MealsPerDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalDays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDay)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">
                        @Html.DisplayFor(modelItem => item.PlanName)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MealsPerDay)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalDays)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartsOn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndsOn)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Create" class="btn btn-default btn-outline-primary btn-lg mt-2">
        <i class="fa fa-plus mr-1" aria-hidden="true"></i>
        Create New
    </a>
</div>